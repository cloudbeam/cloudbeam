<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="rounded-md min-h-full flex items-center justify-center bg-powder_blue py-4 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <%= image_tag 'cloud-upload-icon.png', alt: "The CloudBeam Icon", :class => "mx-auto h-12 w-auto"  %>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign up to start Beaming!
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Or
        <!-- this will trigger a login with the trial account parameters -->
        <a href="#" class="font-medium text-navy hover:text-orange">
          take it for test drive with a trial account!
        </a>
      </p>
    </div>
      <div class="mt-8 space-y-6">
      <input type="hidden" name="remember" value="true">
      <div class="rounded-md shadow-sm -space-y-px">
        <div class="field">
          <%= form.label :first_name, :class => "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :first_name, placeholder: "Jane", :class => "appearance-none rounded-md relative block w-full px-3 py-2 border border-navy placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-navy focus:border-navy focus:z-10 sm:text-sm" %>
        </div>
        <div class="field">
          <%= form.label :last_name, :class => "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :last_name, placeholder: "Doe", :class => "appearance-none rounded-md relative block w-full px-3 py-2 border border-navy placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-navy focus:border-navy focus:z-10 sm:text-sm" %>
        </div>
        <div class="field">
          <%= form.label :email, :class => "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :email, placeholder: "your_email_here@example.com", :class => "appearance-none rounded-md relative block w-full px-3 py-2 border border-navy placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-navy focus:border-navy focus:z-10 sm:text-sm" %>
        </div>
        <div class="field">
          <%= form.label :password, :class => "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password, placeholder: "Super Secret Password", :class => "appearance-none relative block w-full px-3 py-2 border border-navy placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-navy focus:border-navy focus:z-10 sm:text-sm"%>
        </div>
        <div class="field">
          <%= form.label :password_confirmation, :class => "sr-only" %>
          <%= form.password_field :password_confirmation, placeholder: "Confirm Password", :class => "appearance-none relative block w-full px-3 py-2 border border-navy placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-navy focus:border-navy focus:z-10 sm:text-sm"%>
        </div>
      </div>

      <!-- if we want to include this functionality at a later date -- >
